#!groovy
//  groovy Jenkinsfile
pipeline  {
    agent any;
    stages {
          stage("Running MSSQL")
         {
           steps{
                  withCredentials([string(credentialsId: 'MSSQL-PASSWORD',  variable: 'PASSWD')]){
                sh 'docker run  --restart=always -v sqlserver_data:/var/opt/mssql -e "ACCEPT_EULA=Y" -e "MSSQL_SA_PASSWORD=$PASSWD" -p 1433:1433 -d mcr.microsoft.com/mssql/server:2022-latest'
                  }
            }
         }
    }
}
